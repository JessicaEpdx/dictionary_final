<div class="definition_div">
<h2>Definitions for <%=@word.get_word()%>:</h2>
<ul class="word_list"><%@all_definitions.each() do |definition| %>
<li class="definitions"><%= definition%></li>
<%end %>
</ul>
<br><br>
<h3>Add your own definition:</h3>
<form action="/success_2" method="post">
  <input id='word_id' name='word_id' type='hidden' value='<%= @word.id().to_s() %>'>

  <input id='definition' name='definition' type='text'>

  <button type="submit">Add!</button>
</form>

</div>

<div class="link_div"><a class="link" href="/">Dictionary Home</a></div>
